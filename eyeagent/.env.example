# Example environment variables for EyeAgent
# Copy to .env and fill values, or export in your shell.

# LLM provider (OpenAI-compatible)
OPENAI_API_KEY=sk-REPLACE_ME
OPENAI_BASE_URL=https://api.deepseek.com/v1
OPENAI_MODEL=deepseek-chat

# EyeAgent options
EYEAGENT_WORKFLOW_MODE=unified  # unified | graph | interaction | profile
EYEAGENT_DRY_RUN=1              # 1 to mock MCP/LLM calls for local dev
MCP_SERVER_URL=http://localhost:8000/mcp/

# Optional: logging
EYEAGENT_LOG_LEVEL=INFO
EYEAGENT_DATA_DIR=./data
EYEAGENT_CASES_DIR=./cases
